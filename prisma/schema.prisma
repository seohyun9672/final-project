datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          Int       @id @default(autoincrement())
  email       String    @unique
  password    String
  displayName String?
  avatarUrl   String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Channel {
  id    Int    @id @default(autoincrement())
  title String @unique
  img   String 
}

model Recipe {
  id              Int          @id @default(autoincrement())
  title           String       @unique
  servingSize     Int
  totalTime       Int          @default(0)
  rating          Int          @default(0)
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  ingredients     String[]
  instructions    String[]
  totalLikes      Int          @default(0)
  totalComments   Int          @default(0)
  imgURL          String  
}
